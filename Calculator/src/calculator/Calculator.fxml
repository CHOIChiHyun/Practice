         <children>
            <Button fx:id="btn4" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="4" />
            <Button fx:id="btn5" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="5" />
            <Button fx:id="btn6" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="6" />
            <Button fx:id="btnClear" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="C" />
         </children>
      </HBox>
      <VBox prefHeight="160.0" prefWidth="345.0">
         <children>
            <HBox alignment="CENTER" prefHeight="160.0" prefWidth="345.0" spacing="20.0">
               <children>
                  <VBox prefHeight="160.0" prefWidth="225.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                           <children>
                              <Button fx:id="btn1" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="1" />
                              <Button fx:id="btn2" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="2" />
                              <Button fx:id="btn3" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="3" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                           <children>
                              <Button fx:id="btnPoint" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="." />
