            <Button fx:id="btnDiv" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="/" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="80.0" prefWidth="345.0" spacing="20.0">
         <children>
            <Button fx:id="btn7" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="7" />
            <Button fx:id="btn8" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="buttons" text="8" />
