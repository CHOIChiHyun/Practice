<?import javafx.scene.layout.*?>

<VBox prefHeight="550.0" prefWidth="345.0" styleClass="Main" stylesheets="@Common.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.CalculatorController">
   <children>
      <HBox fx:id="windowBar" alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="345.0">
         <children>
            <Button fx:id="btnClose" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="buttons">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/close.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="345.0">
         <children>
            <Label text="C A L C U L A T O R">
               <font>
                  <Font name="Agency FB Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="345.0">
         <children>
            <Label id="lblResult" fx:id="result" alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="310.0">
